                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <br />
                    <br />
                    <div class="col">
                        <h4 class="Seleccionar" style="margin-left:5px;">DISTRIBUCIÓN DE APORTES</h4>
                    </div>

                    <div class="table-responsive">
                        <table class="table  table-borderless table-striped">
                            <thead>
                                <tr class="text-center" style="background-color: #7a6855 !important; color: white;">
                                    <td class="text-center">OBJETIVO</td>
                                    <td class="text-center">CONSIGNACIÓN DIRECTA</td>
                                    <td class="text-center">DEDUCCIÓN DE NÓMINA</td>
                                    <td class="text-center">DÉBITO AUTOMATICO</td>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var items in Model.Distribucion)
                                {

                                    <tr>
                                        <td class="text-center TextDarkBold">@Html.DisplayFor(modelItem => items.NObjetivo)</td>
                                        <td class="text-center TextDarkBold">@Html.DisplayFor(modelItem => items.Consignacion)</td>
