                                        <td class="text-center TextDarkBold">
                                            @Html.DisplayFor(modelItem => item.Producto)
                                        </td>
                                        <td class="text-center TextDarkBold">
                                            @Html.DisplayFor(modelItem => item.Estado)
                                        </td>
