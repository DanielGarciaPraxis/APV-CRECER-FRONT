                                    @Html.LabelFor(model => model.cuentasbancarias.EstadoCuenta,htmlAttributes:new{@class="TextDark"})
                                    <label class="TextDarkBold">@Html.DisplayFor(model => model.cuentasbancarias.EstadoCuenta)</label>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div class="accordion-item">
            <h2 class="accordion-header" id="headingsaldos">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseSaldos" aria-expanded="false" aria-controls="collapseSaldos">
                    SALDOS Y MOVIMIENTOS
                </button>
            </h2>
            <div id="collapseSaldos" class="accordion-collapse collapse" aria-labelledby="headingsaldos" data-bs-parent="#accordionproductos">
                <div class="accordion-body">
                    <br />
                    <br />
                    <div class="row">
                        <div class="col-md-5 col-sm-12 col-xl-5 col-lg-5">
                            <div class="dropdown TextDarkBold">
                                @Html.DropDownList("items",(IEnumerable<SelectListItem>)ViewBag.items,"Seleccione Plan",htmlAttributes: new{@class="form-select TextDarkBold selectfondo"})
                            </div>
                        </div>
                        <div class="col-md-1 col-sm-12 col-xl-1 col-lg-1">
                        </div>
                        <div class="col-md-3 col-sm-12 col-xl-3 col-lg-3">
                            <div class="input-group">
                                <input type="date" id="Periodo" name="Periodo" class="form-control TextDarkBold selectfondo" value="@DateTime.Now.ToString("yyyy-MM-dd")">
                            </div>
                        </div>
                        <div class="col-md-3 col-sm-12 col-xl-3 col-lg-3">
                            <div class="dropdown TextDarkBold">
                                @Html.DropDownList("items",(IEnumerable<SelectListItem>)ViewBag.items,"Objetivo de Ahorro",htmlAttributes: new{@class="form-select TextDarkBold selectfondo"})

                            </div>
                        </div>
                    </div>

                    <br />
                    <br />
                    <div class="row">
                        <div class="col">
                            <h4 class="Seleccionar" style="margin-left:5px;">SALDO TOTAL</h4>
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table class="table  table-borderless table-striped">
                            <thead>
                                <tr class="text-center" style="background-color: #7a6855 !important; color: white;">
                                    <td class="text-center"></td>
                                    <td class="text-center">NÚMERO CUENTA</td>
                                    <td class="text-center">TIPO AHORRO OBJETIVO</td>
                                    <td class="text-center">NOMBRE CUENTA</td>
                                    <td class="text-center">SALDO EN DOLARES</td>
                                    <td class="text-center">SALDO EN UNIDADES</td>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var itemst in Model.SaldosTotales)
                                {
                                    <tr>
                                        <td class="text-center TextDarkBold"><input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1"></td>
                                        <td class="text-center TextDarkBold">@Html.DisplayFor(modelItem => itemst.NumeroCuenta)</td>
                                        <td class="text-center TextDarkBold">@Html.DisplayFor(modelItem => itemst.TipoAhorro)</td>
                                        <td class="text-center TextDarkBold">@Html.DisplayFor(modelItem => itemst.NombreCuenta)</td>
                                        <td class="text-center TextDarkBold">@Html.DisplayFor(modelItem => itemst.SaldoDolares)</td>
                                        <td class="text-center TextDarkBold">@Html.DisplayFor(modelItem => itemst.Unidades)</td>
                                    </tr>
                                }

                            </tbody>
                            <tfoot>
                                <tr class="FooterTable">
                                    <td class="TextDarkBold" colspan="4">TOTALES</td>
                                    <td class="TextDarkBold text-center">00.00</td>
                                    <td class="TextDarkBold text-center">0000.00000000</td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <br />
                    <br />
                    <div class="row">
                        <div class="col">
                            <h4 class="Seleccionar" style="margin-left:5px;">REPORTE DE MOVIMIENTOS</h4>
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-borderless table-striped">
                            <thead>
                                <tr class="text-center" style="background-color: #7a6855 !important; color: white;">
                                    <td class="text-center">FECHA DE MOVIMIENTO</td>
                                    <td class="text-center">NOMBRE DEL OBJETIVO DE AHORRO</td>
                                    <td class="text-center">
                                        TIPO DE
                                        MOVIMIENTO
                                    </td>
                                    <td class="text-center">
                                        VALOR DE
                                        MOVIMIENTO
                                    </td>
                                    <td class="text-center">
                                        VALOR CUOTA DE LA
                                        FECHA DEL MOVIMIENTO
                                    </td>
                                    <td class="text-center">
                                        UNIDADES
                                        COMPRADAS/RETIRADAS
                                    </td>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var itemrm in Model.ReporteMovtos)
                                {
                                    <tr>
                                        <td class="text-center TextDarkBold">@Html.DisplayFor(modelItem => itemrm.FechaMovimiento)</td>
                                        <td class="text-center TextDarkBold">@Html.DisplayFor(modelItem => itemrm.NombreObjetivos)</td>
                                        <td class="text-center TextDarkBold">@Html.DisplayFor(modelItem => itemrm.TipoMovto)</td>
                                        <td class="text-center TextDarkBold">@Html.DisplayFor(modelItem => itemrm.ValorMovto)</td>
                                        <td class="text-center TextDarkBold">@Html.DisplayFor(modelItem => itemrm.ValorCuota)</td>
                                        <td class="text-center TextDarkBold">@Html.DisplayFor(modelItem => itemrm.Unidades)</td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
