                    <br />
                    <div class="row">
                        <div class="col">
                            <h4 class="Seleccionar" style="margin-left:5px;">BENEFICIARIOS</h4>
                        </div>
                    </div>

                    <div class="table-responsive">

                        <table class="table  table-borderless table-striped">
                            <thead>
                                <tr class="text-center" style="background-color: #7a6855 !important; color: white;">
                                    <td class="text-center">NOMBRE</td>
                                    <td class="text-center">PARENTESCO</td>
                                    <td class="text-center">FECHA DE NACIMIENTO</td>
                                    <td class="text-center">SEXO</td>
                                    <td class="text-center">PORCENTAJE</td>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var itemb in Model.Beneficiario)
                                {
                                    <tr>
                                        <td class="text-center  TextDarkBold">@Html.DisplayFor(modelItem => itemb.NombreB)</td>
                                        <td class="text-center  TextDarkBold">@Html.DisplayFor(modelItem => itemb.Parentesco)</td>
                                        <td class="text-center  TextDarkBold">@Html.DisplayFor(modelItem => itemb.FechaNacimiento)</td>
                                        <td class="text-center  TextDarkBold">@Html.DisplayFor(modelItem => itemb.Porcentaje)</td>
                                        <td class="text-center  TextDarkBold">%</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="accordion-item">
            <h2 class="accordion-header" id="headingcuentas">
