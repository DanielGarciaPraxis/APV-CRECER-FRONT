                                        <td class="text-center TextDarkBold">@Html.DisplayFor(modelItem => items.Debito)</td>
                                    </tr>

                                }
                            </tbody>
                            <tfoot>
                                <tr class="FooterTable" style="border:none">
                                    <td class="text-center TextDarkBold">TOTAL</td>
