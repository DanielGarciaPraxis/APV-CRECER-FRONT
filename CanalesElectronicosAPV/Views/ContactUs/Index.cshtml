@model CanalesElectronicosAPV.Models.DTO.ContactUsDTO
@{
    ViewData["Title"] = "Contact Us";
}

<partial name="~/Views/Partials/_ComboFondo.cshtml" />
<br />
<br />
<div class="row">
    <div class="col-md-6 col-sm-6 col-xl-6 col-lg-6">
            <label id="lbltitle" class="TextCafe">DATOS DEL CLIENTE</label>
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-6 col-sm-6 col-xl-6 col-lg-6">
        <div class="dropdown">
            @Html.DropDownListFor(model => model.TipoConsulta,(IEnumerable<SelectListItem>)ViewBag.TpoConsulta,"Tipo de Consulta",htmlAttributes: new{@class="form-select TextDarkBold selectfondo"})
        </div>
    </div>
</div>
<br />
<br />
<div class="row">
    <div class="col-md-6 col-sm-6 col-xl-6 col-lg-6" >
        @Html.LabelFor(model => model.Mensaje,htmlAttributes:new{@class="TextDarkBold"})
        @Html.TextBoxFor(model => model.Mensaje,"Mensaje",htmlAttributes:new{@class="form-control TextDark",@style="border-style: none none solid none"})                           
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-6 col-sm-6 col-xl-6 col-lg-6" >
            <button class="btn btn-primary btnFile TextDarkBold" id="btn_FileInput">Elegir Archivos</button>
            <label class="TextDark" for="btn_FileInput" style="text-align:center;padding-left:20px;padding-top:7px;">No se eligió archivo</label>
            @Html.TextBoxFor(model => model.Archivo,"Archivo",htmlAttributes:new{@class="form-control TextDark",@type="file",@style="border:none;display:none;",@placeholder="No se eligió archivo"})                           
    </div>
</div>
<div class="row">
    <div class="col-md-6 col-sm-6 col-xl-6 col-lg-6">
        <label class="TextDarkBold" style="padding-right:80px;">Archivos soportados con un tamaño máximo de 10MB</label>
    </div>                
</div>
<br />
<div class="row" style="align-items: center; text-align:center">
    <div class="col-md-6 col-sm-6 col-xl-6 col-lg-6">
        <button type="button" class="btn active-custom">ENVIAR</button>    
    </div>
</div>

@section scripts{
    <script>
        document.querySelector('#btn_FileInput').onclick = function(event) {
            document.querySelector('#Archivo').click()
        };


        document.querySelector('#Archivo').addEventListener('change', function() {
            var files = this.files;
            if (!files.length) {
                document.querySelector('label[for=btn_FileInput]').innerHTML= "No se eligió archivo";
                return;
            }
            for (var i = 0, l = files.length; i < l; i++) {
                document.querySelector('label[for=btn_FileInput]').innerHTML =files[i].name + '\n';
            }
        });
    </script>
}